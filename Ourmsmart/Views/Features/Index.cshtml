@model IEnumerable<Ourmsmart.Models.Feature>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<div style="text-align:right; background-color:white;padding:25px;overflow-x:auto;">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FAProduct.Title)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FAProduct.Title)
                </td>
                <td>
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.FID }) |
                    @Html.ActionLink("جزئیات", "Details", new { id = item.FID }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.FID })
                </td>
            </tr>
        }

    </table>
</div>

    
