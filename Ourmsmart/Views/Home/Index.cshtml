<script>
    function postcontact() {
        sData = JSON.stringify({ Name: $('#cname').val(), Email: $('#cemail').val(), Subject: $('#csubject').val(), Message: $('#cmessage').val() });
        jQuery.support.cors = true;
        $.ajax({
            type: 'POST',
            dataType: 'JSON',
            contentType: 'application/json; charset=utf-8',
            data: sData,
            url: "/Home/Contact",
            success: function (rs) {
                if (rs.success) {
                    toastr.success(rs.message, 'با سلام', { timeOut: 3000 });
                    document.getElementById("contactform").reset();
                    /*setTimeout(() => {
                        $('html, body').animate({ scrollTop: 0 }, 1500);
                    }, 3000);*/
                    

                }
                else {
                    toastr.warning(rs.message, 'خطا', { timeOut: 3000 });

                }
            },
            error: function (response) {
                toastr.error(response.message, 'خطا', { timeOut: 3000 });
            }
        });
    }
</script>