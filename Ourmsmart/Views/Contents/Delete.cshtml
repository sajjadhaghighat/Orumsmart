@model Ourmsmart.Models.FAContent

@{
    ViewBag.Title = "حذف محتوا";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}


<div style="text-align:right; background-color:white;padding:25px;overflow-x:auto;">
    <h3>آیا از حذف محتوا مطمئن هستید ؟</h3>
    <div>
        <h4>مشخصات محتوا</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.content)
            </dt>

            <dd>
                @Html.Raw(Model.content)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="حذف" class="btn btn-primary" /> |
                @Html.ActionLink("برگشت به لیست", "Index")
            </div>
        }
    </div>
</div>


