@model IEnumerable<Ourmsmart.Models.Order>

@{
    ViewBag.Title = "سفارشات";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<div style="text-align:right;background-color:white;padding:15px" dir="rtl">
    <h2>سفارشات</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cartid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paycode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tracingcode)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cartid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Paycode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tracingcode)
                </td>
                <td>
                    @Html.ActionLink("جزئیات", "detailOrder", new { trace = item.Tracingcode }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.OID })
                </td>
            </tr>
        }

    </table>
</div>
